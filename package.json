{
  "name": "pmd-github-action",
  "description": "Execute PMD static code analysis.",
  "version": "2.0.0-SNAPSHOT",
  "main": "dist/index.js",
  "author": "PMD",
  "license": "MIT",
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript",
    "PMD",
    "Linter"
  ],
  "bugs": {
    "url": "https://github.com/pmd/pmd-github-action/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pmd/pmd-github-action.git"
  },
  "homepage": "https://github.com/pmd/pmd-github-action#readme",
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "jest",
    "coverage": "make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "prettier --write **/*.ts",
    "format:check": "prettier --check **/*.ts",
    "lint": "npx eslint . -c .github/linters/.eslintrc.yml",
    "package": "ncc build src/index.ts --out dist --minify --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/artifact": "^2.1.4",
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@actions/tool-cache": "^2.0.1",
    "@octokit/rest": "^20.1.0",
    "@types/sarif": "^2.1.7",
    "semver": "^7.6.0"
  },
  "devDependencies": {
    "@actions/io": "^1.1.3",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.12.4",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.5.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jsonc": "^2.15.0",
    "eslint-plugin-prettier": "^5.0.1",
    "fetch-mock": "^9.11.0",
    "fetch-mock-jest": "^1.5.1",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "make-coverage-badge": "^1.2.0",
    "nock": "^13.5.4",
    "prettier": "^3.1.0",
    "prettier-eslint": "^16.1.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.4.4"
  }
}
