    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Jest Debug opened file",
            "runtimeExecutable": "npx",
            "args": ["jest", "--runInBand", "--no-cache", "--no-coverage", "${fileBasenameNoExtension}"],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
        }
    ]
}
